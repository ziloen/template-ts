{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "strict": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "removeComments": false,
    "stripInternal": true
  }
}